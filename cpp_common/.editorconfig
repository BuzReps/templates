root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Should be syncronized with .clang-format
[*.{h,c,cpp}]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 2

[{*.cmake,CMakeLists.txt}]
indent_style = tab
indent_size = 4

[{vcpkg.json,CMakePresets.json}]
indent_style = tab
indent_size = 4

